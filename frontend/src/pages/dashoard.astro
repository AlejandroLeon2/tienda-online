---
import ProductosTabla from "../components/ProductosTabla.astro";
import FormProducto from "../components/FormProducto.astro";
import UserTabla from "../components/UserTabla.astro";
import PedidosTabla from "../components/PedidosTabla.astro";
import LayoutDashboard from "../layouts/LayoutDashboard.astro";
---

<LayoutDashboard>
  <main class="grid grid-cols-8 md:flex">
    <section
      id="navDashboard"
      class="bg-[#023047] [@media(max-width:426px)]:fixed col-span-1 right-14/15 md:left-0 top-0 text-white w-50 h-screen flex flex-col p-6"
    >
      <!-- Logo -->
      <img
        class="w-15 mb-6 mx-auto invert"
        src="../../src/assets/logo.svg"
        alt="Logo"
      />
      <!-- Navigation -->
      <nav class="flex-1 space-y-6">
        <a
          href="#"
          id="boton1"
          class="flex items-center space-x-2 hover:text-yellow-400"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-package-plus-icon lucide-package-plus"
            ><path d="M16 16h6"></path><path d="M19 13v6"></path><path
              d="M21 10V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l2-1.14"
            ></path><path d="m7.5 4.27 9 5.15"></path><polyline
              points="3.29 7 12 12 20.71 7"></polyline><line
              x1="12"
              x2="12"
              y1="22"
              y2="12"></line></svg
          >
          <p>Agregar productos</p>
        </a>
        <a
          href="#"
          id="boton2"
          class="flex items-center space-x-2 hover:text-yellow-400"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-laptop-minimal-check-icon lucide-laptop-minimal-check"
            ><path d="M2 20h20"></path><path d="m9 10 2 2 4-4"></path><rect
              x="3"
              y="4"
              width="18"
              height="12"
              rx="2"></rect></svg
          >
          <p>Productos</p>
        </a>
        <a
          href="#"
          id="boton3"
          class="flex items-center space-x-2 hover:text-yellow-400"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-user-icon lucide-user"
            ><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path><circle
              cx="12"
              cy="7"
              r="4"></circle></svg
          >
          <p>Usuarios</p>
        </a>
        <a
          href="#"
          id="boton4"
          class="flex items-center space-x-2 hover:text-yellow-400"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-library-big-icon lucide-library-big"
            ><rect width="8" height="18" x="3" y="3" rx="1"></rect><path
              d="M7 3v18"></path><path
              d="M20.4 18.9c.2.5-.1 1.1-.6 1.3l-1.9.7c-.5.2-1.1-.1-1.3-.6L11.1 5.1c-.2-.5.1-1.1.6-1.3l1.9-.7c.5-.2 1.1.1 1.3.6Z"
            ></path></svg
          >
          <p>Reportes</p>
        </a>
      </nav>

      <!-- Logout -->
      <div class="mt-auto">
        <button
          class="flex items-center space-x-2 text-semibold hover:text-yellow-400"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-log-out-icon lucide-log-out"
            ><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline
              points="16 17 21 12 16 7"></polyline><line
              x1="21"
              x2="9"
              y1="12"
              y2="12"></line></svg
          >
          <span>Log out</span>
        </button>
      </div>
    </section>
    <div
      id="desplazador"
      class="bg-celeste md:hidden fixed top-2 cursor-pointer active:scale-95 hover:scale-105 border-r-6 border-b-4 border-black w-8 h-9 rounded-lg flex justify-center items-center"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="28"
        height="28"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide text-black lucide-arrow-left-right-icon lucide-arrow-left-right"
        ><path d="M8 3 4 7l4 4"></path><path d="M4 7h16"></path><path
          d="m16 21 4-4-4-4"></path><path d="M20 17H4"></path></svg
      >
    </div>
    <section class="col-span-3 col-start-2 w-full">
      <section class="w-full hidden">
        <ProductosTabla />
      </section>
      <section class="w-full ">
        <FormProducto />
      </section>
      <section class="w-full hidden">
        <UserTabla />
      </section>
      <section class="w-full min-h-screen h-auto hidden">
        <PedidosTabla />
      </section>
    </section>
  </main>
</LayoutDashboard>
