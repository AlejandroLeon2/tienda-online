---
import { Product } from "../../services/api";
import Boton from "../../components/Boton.astro";
import Layout from "../../layouts/Layout.astro";
const productos = await Product.getProductos();

export async function getStaticPaths() {
  return productos.map((producto) => ({
    params: { id: producto.id_pr.toString() },
  }));
}

const { id } = Astro.params;
const producto = productos.find((p) => p.id_pr.toString() === id);
---

<Layout>
  <section class="bg-white font-sans">
    <div class="container mx-auto p-4">
      <div class="flex flex-col lg:flex-row">
        <div class="flex flex-col lg:flex-row items-center lg:w-1/2">
          <div class="mt-4 lg:mt-0 lg:ml-4">
            <img
              alt={producto.nombre_pr}
              src={producto.foto_pr}
              id="mainImage"
              class="cursor-pointer w-full min-h-70 hover:scale-105 duration-400"
            />
          </div>
        </div>
        <section class="lg:w-1/2 lg:pl-8 mt-8">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-gray-500">{producto.marca_pr}</h2>
              <h1 class="text-2xl font-bold">
                {producto.nombre_pr}
              </h1>
              <p class="text-gray-500">{producto.categoria_ca}</p>
            </div>
          </div>
          <div class="mt-4">
            <p class="text-gray-500 h-25">{producto.descripcion_pr}</p>
            <p class="text-red-600 text-3xl font-bold text-center">
              S/{producto.precio_pr}
            </p>
          </div>
          <div class="mt-4 flex items-center space-x-4">
            <div class="flex items-center border rounded-full border-gray-300">
              <button class="px-4 py-2 text-gray-800">-</button>
              <input
                class="w-12 text-center border-none"
                type="text"
                value="1"
              />
              <button class="px-4 py-2 text-gray-800">+</button>
            </div>

            <div>
              <Boton
                text="Agregar al carrito"
                color="bg-amarillo"
                hoverColor="hover:bg-dorado"
                tipo="button"
                clasAdd="añadir-Carrito"
                codigo={producto.id_pr}
              />
            </div>
          </div>
          <section class="mt-4">
            <div class="flex items-center space-x-2">
              <p class="text-gray-500">Disponible envío a domicilio</p>
            </div>
            <div class="flex items-center space-x-2 mt-2">
              <p class="text-gray-500">Disponible retiro en tienda y lockers</p>
            </div>
          </section>
        </section>
      </div>
    </div>
  </section>
</Layout>
