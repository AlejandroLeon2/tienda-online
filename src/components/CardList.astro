---
const { nombre, descripcion, precio, codigo, imgProducto } = Astro.props;
---

<li
  class="producto-carrito rounded border my-1 bg-white w-[320px] h-[90px] grid grid-cols-3"
  data-codigo={codigo}
>
  <img
    class="rounded-l col-span-1 w-[90px] h-[90px]"
    src={imgProducto}
    alt={nombre}
  />
  <section class="col-span-2 my-1">
    <div class="flex justify-around">
      <h4 class="text-[0.833rem] w-[180px] leading-4 overflow-hidden">
        {nombre}
      </h4>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-trash2-icon lucide-trash-2 cursor-pointer hover:scale-105 active:scale-95 active:text-red-600"
        ><path d="M3 6h18"></path><path
          d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path><path
          d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path><line
          x1="10"
          x2="10"
          y1="11"
          y2="17"></line><line x1="14" x2="14" y1="11" y2="17"></line></svg
      >
    </div>
    <p
      class="overflow-hidden text-[0.694rem] w-[200px] h-[25px] my-0.5 mr-2 leading-[14px] font-sans text-gray-600"
    >
      {descripcion}
    </p>
    <div class="flex justify-center items-center my-1 text-[0.833rem]">
      <p class="text-red-700 font-bold text-[0.833rem]">S/ {precio}</p>
      <input
        class="ml-8 w-[32px] h-[20px] border text-center rounded bg-white"
        value="1"
        type="number"
      />
    </div>
  </section>
</li>
