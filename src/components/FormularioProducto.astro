<!-- Formulario para ingreso de productos estilo oscuro -->
<div class="min-h-screen flex items-center justify-center px-4">
<form class="w-full max-w-xl mx-auto mt-10 p-8 bg-[#1f1f1f] text-white rounded-lg shadow-lg border border-gray-600" action="/productos" method="POST" enctype="multipart/form-data">
    <h2 class="text-2xl font-bold text-center mb-6">Agrega un nuevo producto</h2>
  
    <div class="mb-4">
      <label class="block text-sm font-semibold mb-2" for="nombre_producto">
        Nombre del producto
      </label>
      <input class="w-full bg-gray-200 text-gray-900 border border-gray-300 rounded py-2 px-3 focus:outline-none focus:ring-2 focus:ring-yellow-500" 
             id="nombre_producto" type="text" placeholder="Nombre del producto" name="nombre_producto" required />
    </div>
  
    <div class="flex flex-col md:flex-row gap-4 mb-4">
      <div class="w-full">
        <label class="block text-sm font-semibold mb-2" for="marca_producto">
          Marca del producto
        </label>
        <input class="w-full bg-gray-200 text-gray-900 border border-gray-300 rounded py-2 px-3 focus:outline-none focus:ring-2 focus:ring-yellow-500"
               id="marca_producto" type="text" placeholder="Marca del producto" name="marca_producto" required />
      </div>
  
      <div class="w-full">
        <label class="block text-sm font-semibold mb-2" for="precio_producto">
          Precio
        </label>
        <input class="w-full bg-gray-200 text-gray-900 border border-gray-300 rounded py-2 px-3 focus:outline-none focus:ring-2 focus:ring-yellow-500"
               id="precio_producto" type="number" placeholder="Precio" name="precio_producto" required />
      </div>
    </div>
  
    <div class="mb-4">
      <label class="block text-sm font-semibold mb-2" for="descripcion_producto">
        Descripci贸n
      </label>
      <textarea class="w-full bg-gray-200 text-gray-900 border border-gray-300 rounded py-2 px-3 focus:outline-none focus:ring-2 focus:ring-yellow-500"
                id="descripcion_producto" placeholder="Descripci贸n del producto" name="descripcion_producto" required></textarea>
      <p class="text-gray-400 text-xs italic mt-1">Escribe una breve descripci贸n del producto.</p>
    </div>
  
    <div class="mb-6">
      <label class="block text-sm font-semibold mb-2" for="imagen_producto">
        Imagen del producto
      </label>
      <input class="w-full bg-gray-200 text-gray-900 border border-gray-300 rounded py-2 px-3 focus:outline-none focus:ring-2 focus:ring-yellow-500"
             id="imagen_producto" type="file" name="imagen_producto" accept="image/*" required />
      
      <!-- Imagen de previsualizaci贸n -->
      <div class="mt-4">
        <img id="preview_imagen" src="" alt="Vista previa de la imagen" class="max-w-full max-h-64 rounded shadow-md hidden" />
      </div>
    </div>
  
    <div class="flex justify-center">
      <button class="bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-2 px-6 rounded focus:outline-none focus:ring-2 focus:ring-yellow-500">
        Agregar producto
      </button>
    </div>
  </form>
</div>
  
  <script>
    const inputImagen = document.getElementById('imagen_producto');
    const previewImagen = document.getElementById('preview_imagen');
  
    inputImagen.addEventListener('change', function () {
      const archivo = this.files[0];
      if (archivo) {
        const reader = new FileReader();
        reader.onload = function (e) {
          previewImagen.src = e.target.result;
          previewImagen.classList.remove('hidden');
        };
        reader.readAsDataURL(archivo);
      } else {
        previewImagen.src = '';
        previewImagen.classList.add('hidden');
      }
    });
  </script>