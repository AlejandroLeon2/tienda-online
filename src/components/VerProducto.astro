<main class="container mx-auto p-4">
    <section class="flex flex-col lg:flex-row">
      <div class="flex flex-col lg:flex-row items-center lg:w-1/2">
        <!-- Miniaturas (escritorio) -->
        <aside class="hidden lg:flex flex-col items-center space-y-4">
          <img src="https://www.lacuracao.pe/media/catalog/product/g/3/g34_black_beaut_1.png" alt="Miniatura 1" class="rounded-lg cursor-pointer thumbnail transition duration-400 ease-in-out" width="80" height="160">
          <img src="https://www.lacuracao.pe/media/catalog/product/g/3/g34_black_beaut_2.png" alt="Miniatura 2" class="rounded-lg cursor-pointer thumbnail transition duration-400 ease-in-out" width="80" height="160">
          <img src="https://www.lacuracao.pe/media/catalog/product/g/3/g34_black_beaut_3.png" alt="Miniatura 3" class="rounded-lg cursor-pointer thumbnail transition duration-400 ease-in-out" width="80" height="160">
          <img src="https://www.lacuracao.pe/media/catalog/product/g/3/g34_black_beaut_4.png" alt="Miniatura 4" class="rounded-lg cursor-pointer thumbnail transition duration-400 ease-in-out" width="80" height="160">
          <img src="https://www.lacuracao.pe/media/catalog/product/g/3/g34_black_beaut_5.png" alt="Miniatura 5" class="rounded-lg cursor-pointer thumbnail transition duration-400 ease-in-out" width="80" height="160">
        </aside>

        <!-- Imagen principal -->
        <figure class="mt-4 lg:mt-0 lg:ml-4">
          <img id="mainImage" src="https://www.lacuracao.pe/media/catalog/product/g/3/g34_black_beaut_1.png" alt="Imagen principal Motorola G34" class="cursor-pointer hover:scale-105 duration-400 ease-in-out" width="600" height="1200">
        </figure>

        <!-- Miniaturas (móvil) -->
        <aside class="lg:hidden mt-4 flex overflow-x-auto space-x-4">
          <img src="https://www.lacuracao.pe/media/catalog/product/g/3/g34_black_beaut_1.png" alt="Miniatura 1" class="rounded-lg cursor-pointer thumbnail transition duration-400 ease-in-out" width="80" height="160">
          <img src="https://www.lacuracao.pe/media/catalog/product/g/3/g34_black_beaut_2.png" alt="Miniatura 2" class="rounded-lg cursor-pointer thumbnail transition duration-400 ease-in-out" width="80" height="160">
          <img src="https://www.lacuracao.pe/media/catalog/product/g/3/g34_black_beaut_3.png" alt="Miniatura 3" class="rounded-lg cursor-pointer thumbnail transition duration-400 ease-in-out" width="80" height="160">
          <img src="https://www.lacuracao.pe/media/catalog/product/g/3/g34_black_beaut_4.png" alt="Miniatura 4" class="rounded-lg cursor-pointer thumbnail transition duration-400 ease-in-out" width="80" height="160">
          <img src="https://www.lacuracao.pe/media/catalog/product/g/3/g34_black_beaut_5.png" alt="Miniatura 5" class="rounded-lg cursor-pointer thumbnail transition duration-400 ease-in-out" width="80" height="160">
        </aside>
      </div>

      <!-- Información del producto -->
      <article class="lg:w-1/2 lg:pl-8 mt-8">
        <header class="flex items-center justify-between">
          <div>
            <h2 class="text-gray-500">Motorola</h2>
            <h1 class="text-2xl font-bold">Celular Motorola G34 5G 8GB 256GB 6.5” Negro</h1>
            <p class="text-gray-500">SKU G34 BLACK BEAUT</p>
          </div>
        </header>

        <section class="mt-4">
          <div class="text-red-600 text-3xl font-bold">
            S/ 599.00
            <p class="text-gray-500 text-xl line-through">S/ 799.00</p>
            <p class="text-red-600 text-xl">Oferta</p>
          </div>
        </section>

        <section class="mt-4 flex items-center space-x-4">
          <div class="flex items-center border rounded-full border-gray-300">
            <button class="px-4 py-2">-</button>
            <input type="text" class="w-12 text-center border-none" value="1">
            <button class="px-4 py-2">+</button>
          </div>
          <button class="bg-yellow-400 text-black font-bold px-4 py-2 rounded-full cursor-pointer hover:bg-yellow-500 hover:scale-103 duration-400">Agregar al carrito</button>
          <button class="text-gray-500"><i class="far fa-heart"></i></button>
        </section>

        <section class="mt-4">
          <div class="flex items-center space-x-2">
            <i class="fas fa-truck text-yellow-400"></i>
            <p class="text-gray-500">Disponible envío a domicilio <a href="#" class="text-yellow-400">Consultar</a></p>
          </div>
          <div class="flex items-center space-x-2 mt-2">
            <i class="fas fa-store text-yellow-400"></i>
            <p class="text-gray-500">Disponible retiro en tienda y lockers <a href="#" class="text-yellow-400">Consultar</a></p>
          </div>
        </section>
      </article>
    </section>
  </main>
  
  <script>
    const mainImage = document.getElementById('mainImage');
    const thumbnails = document.querySelectorAll('.thumbnail');
  
    thumbnails.forEach(thumbnail => {
      thumbnail.addEventListener('click', () => {
        // Transición de opacidad suave
        mainImage.classList.add('opacity-0');
  
        setTimeout(() => {
          mainImage.src = thumbnail.src;
          mainImage.classList.remove('opacity-0');
        }, 200);
  
        // Quitar sombra de todas
        thumbnails.forEach(t => t.classList.remove('ring-4', 'ring-yellow-300', 'ring-offset-2'));
        
        // Añadir sombra a la miniatura seleccionada
        thumbnail.classList.add('ring-4', 'ring-yellow-300', 'ring-offset-2');
      });
    });
  </script>
  